<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ← Geri (AnaEkran’a dön) -->
    <Button
        android:id="@+id/btnSalonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Geri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvSalonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spor Salonu Programları"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnSalonBack"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Program 1 Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGymProg1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/tvSalonTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program 1 (Push-Pull-Legs)"
            android:textSize="16sp"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Program 2 Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGymProg2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/cardGymProg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program 2 (Full Body)"
            android:textSize="16sp"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Program 3 Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGymProg3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/cardGymProg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program 3 (Split)"
            android:textSize="16sp"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>