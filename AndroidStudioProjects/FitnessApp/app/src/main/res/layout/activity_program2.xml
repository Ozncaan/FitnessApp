<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ← Geri -->
    <Button
        android:id="@+id/btnProg2Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Geri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvProg2Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program 2 – Kolay/Orta Düzey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnProg2Back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Hareket Listesi -->
    <ScrollView
        android:id="@+id/scrollProg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvProg2Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. Dumbell Front Squat -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="1. Dumbell Front Squat – 3×10"/>
            <VideoView
                android:id="@+id/videoFrontSquat"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayFrontSquat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseFrontSquat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 2. Floor Press -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="2. Floor Press – 3×10"/>
            <VideoView
                android:id="@+id/videoFloorPress"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayFloorPress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseFloorPress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 3. Tek Kol Row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="3. Tek Kol Dumbell Row – 3×10"/>
            <VideoView
                android:id="@+id/videoBentOverRow"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayBentRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseBentRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 4. Romanian Deadlift -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="4. Romanian Deadlift – 3×12"/>
            <VideoView
                android:id="@+id/videoRomanianDL"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayRomanianDL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseRomanianDL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 5. Yan Omuz Lateral Raise -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="5. Yan Omuz Lateral Raise – 3×12"/>
            <VideoView
                android:id="@+id/videoLateralRaise"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayLateral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseLateral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 6. Triceps Kickback -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="6. Triceps Kickback – 3×12"/>
            <VideoView
                android:id="@+id/videoKickback"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayKickback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseKickback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>