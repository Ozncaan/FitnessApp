<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ← Geri -->
    <Button
        android:id="@+id/btnGymProg1Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Geri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvGymProg1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push/Pull/Legs"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnGymProg1Back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Hareket Listesi -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvGymProg1Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Pazartesi: Push -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pazartesi – Push Day"
                android:textStyle="bold"
                android:padding="8dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Bench Press – 4×8"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Incline Dumbbell Press – 3×10"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Overhead Press – 3×8"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Dumbbell Flyes – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Triceps Dips – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>

            <!-- Salı: Pull -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salı – Pull Day"
                android:textStyle="bold"
                android:padding="8dp" android:layout_marginTop="12dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Deadlift – 4×6"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Pull-Ups – 3×8"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Barbell Row – 3×10"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Face Pulls – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Biceps Curl – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>

            <!-- Çarşamba: Legs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çarşamba – Leg Day"
                android:textStyle="bold"
                android:padding="8dp" android:layout_marginTop="12dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Back Squat – 4×8"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Leg Press – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Romanian Deadlift – 3×10"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Walking Lunges – 3×12 her bacak"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Calf Raises – 4×15"
                android:paddingStart="16dp" android:padding="4dp"/>

            <!-- Cuma: Push -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuma – Push Day"
                android:textStyle="bold"
                android:padding="8dp" android:layout_marginTop="12dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Incline Bench Press – 4×8"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Dumbbell Shoulder Press – 3×10"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Chest Dips – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Lateral Raises – 3×15"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Overhead Triceps Ext. – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>

            <!-- Cumartesi: Pull -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cumartesi – Pull Day"
                android:textStyle="bold"
                android:padding="8dp" android:layout_marginTop="12dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Rack Pulls – 4×6"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Lat Pulldown – 3×10"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Seated Cable Row – 3×10"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Hammer Curls – 3×12"
                android:paddingStart="16dp" android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Rear Delt Fly – 3×15"
                android:paddingStart="16dp" android:padding="4dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>