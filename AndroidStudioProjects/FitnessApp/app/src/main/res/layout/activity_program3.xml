<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ← Geri -->
    <Button
        android:id="@+id/btnProg3Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Geri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvProg3Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program 3 – Orta"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnProg3Back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Hareket Listesi -->
    <ScrollView
        android:id="@+id/scrollProg3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvProg3Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. Bulgarian Split Squat -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="1. Bulgarian Split Squat – 3×8 (her bacak)"/>
            <VideoView
                android:id="@+id/videoSplitSquat"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlaySplitSquat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseSplitSquat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 2. Incline Dumbell Press -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="2. Incline Dumbell Press – 3×10"/>
            <VideoView
                android:id="@+id/videoInclinePress"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayIncline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseIncline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 3. Renegade Row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="3. Renegade Row – 3×8 (her kol)"/>
            <VideoView
                android:id="@+id/videoRenegadeRow"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayRenegade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseRenegade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 4. Dumbell Deadlift + Shrug -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="4. Deadlift + Shrug – 3×10"/>
            <VideoView
                android:id="@+id/videoDLShrug"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayDLShrug"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseDLShrug"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 5. Seated Dumbell Shoulder Press -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="5. Seated Dumbell Shoulder Press – 3×10"/>
            <VideoView
                android:id="@+id/videoShoulderPress"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlayShoulderPress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseShoulderPress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

            <!-- 6. Dumbell Skull Crushers -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="6. Dumbell Skull Crushers – 3×10"/>
            <VideoView
                android:id="@+id/videoSkullCrushers"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">
                <Button
                    android:id="@+id/btnPlaySkull"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="▶ Başlat"/>
                <Button
                    android:id="@+id/btnPauseSkull"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏸ Durdur"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>